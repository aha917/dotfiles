# Font Configuration
font-size = 12

# Window Configuration
window-decoration = false
window-padding-x = 16
window-padding-y = 16
background-opacity = 1.0

# Cursor Configuration
cursor-style = block
cursor-style-blink = true

# Scrollback
scrollback-limit = 3023

# Terminal features
mouse-hide-while-typing = true
copy-on-select = true
confirm-close-surface = false

# Disable annoying copied to clipboard
app-notifications = no-clipboard-copy,no-config-reload

# Key bindings for common actions
#keybind = ctrl+c=copy_to_clipboard
#keybind = ctrl+v=paste_from_clipboard
keybind = ctrl+shift+n=new_window
keybind = ctrl+t=new_tab
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+zero=reset_font_size
# Scroll 3 lines UP
keybind = shift+up=scroll_page_lines:-2
# Scroll 3 lines DOWN
keybind = shift+down=scroll_page_lines:2


# Material 3 UI elements
unfocused-split-opacity = 0.7
unfocused-split-fill = #44464f

# Tab configuration
gtk-titlebar = false

# Shell integration
shell-integration = detect
shell-integration-features = cursor,sudo,title,no-cursor
keybind = shift+enter=text:


# Rando stuff
gtk-single-instance = true

# Dank color generation
#theme = "Monokai Classic"
theme = "Monokai Classic"

font-family = "JetBrains Mono"
font-size = 13
# Disable most ligatures
font-feature = -liga, -calt 
# Or, to enable a specific feature
font-feature = +zero